<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:orientation="horizontal"
    android:backgroundTint="@color/white">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        android:background="@drawable/roundrd_blue2"
        android:id="@+id/Linear_Visible">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_medical_services_24"
            android:textSize="15dp"
            android:drawablePadding="3dp"
            android:id="@+id/RATE_NAME_DOCTOR"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Patient_NAME_RATE"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:text="Patient Name  "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"/>


    <TextView
        android:id="@+id/RATE_NAME"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAllCaps="true"
        android:text="Rate"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="33dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:text="/5"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"/>



        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:background="@drawable/ic_baseline_star_rate_24"/>


    </LinearLayout>













</androidx.cardview.widget.CardView>