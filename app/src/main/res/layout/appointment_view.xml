<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:orientation="horizontal"
    android:backgroundTint="@color/blue2">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/Pat_Meow"
        android:layout_marginLeft="300dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/DaTe"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_bg"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />



            <ImageView
                android:id="@+id/ASSIGNE_DOCTOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/assign"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ASSIGNE_MYSELF_REQUEST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/ic_baseline_near_me_24"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/EDIT_APPO_RECYCLER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/edit_png"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/DELETE_APPOINTMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/delete"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/CANCEL_APPOINTMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/cancel_png"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/END_APPOINTMENT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:background="@drawable/roundrd_blue2"
                android:src="@drawable/clock_png"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />




        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="PATIENT NAME :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PATIENT_RECYCLE"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@color/black"
                android:textSize="0dp" />

            <TextView
                android:id="@+id/MOBILE_RECYCLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="0dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="APPO_DATE :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/APP_DATE_RECYCLE"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="TIME :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TIME_RECYCLE"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="REQUIRED DOCTOR :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_RECYCLE"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">






        </RelativeLayout>





    </LinearLayout>







</androidx.cardview.widget.CardView>