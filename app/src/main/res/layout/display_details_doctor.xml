<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:backgroundTint="@color/flower">












    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="300dp"
        android:orientation="vertical">









        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="NAME :"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_NAME"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="MOBILE :"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_MOBILE"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="MAIL :"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_MAIL"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="AGE :"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_AGE"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/gender_doc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="GENDER :"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_GENDER"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/SPECIAL123"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SPECIALIST :"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DOCTOR_SPECIALIST_LIST"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/RATE_DIS"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="RATING :"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RATE_DIS_VIEW"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/DOCTOR_SELECT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/round_tick"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/DOCTOR_REJECT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:background="@drawable/rounded_bg"
                android:src="@drawable/round_x"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />




        </RelativeLayout>





    </LinearLayout>







</androidx.cardview.widget.CardView>